<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="false" scanPeriod="1000000 seconds">

    <contextName>logback</contextName>
    <property name="app.name" value="logback_test"/>
    <!--定义控制台输出的格式-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender"> <!--ConsoleAppender表示控制台-->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level> <!--输出该级别以上的错误-->
        </filter>
        <encoder> <!--设置格式-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %yellow(%5p) %highlight(${PID:-}) %highlight([%15.15t]) %cyan(%-40.40logger{39}) : %m%n</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--定义日志输出的路径-->
        <file>/data/project/logs/log.log</file>
        <!--定义日志滚动的策略-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--定义文件滚动时的文件名的格式-->
            <fileNamePattern>/data/project/logs/log-%d{yyyy-MM-dd}.log</fileNamePattern>  <!--TimeBasedRollingPolicy中不能用%i-->
            <!--保存60个文件，超过就删除旧的-->
            <maxHistory>60</maxHistory>
            <!-- 该属性在 1.1.6版本后 才开始支持-->
            <!-- 日志最大值为20G,超出会删除原有的-->
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!--每个日志文件最大100MB-->
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <!--定义输出格式-->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${PID:-} [%15.15t] %-40.40logger{39} : %m%n</pattern>
        </encoder>
    </appender>

    <!--root为默认的输出配置,定义了控制台和文件两种输出,同时输出到控制台和文件-->
    <root level="info">
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </root>

    <!--定义制定路径下的输出级别,没有定义输出格式,默认继承root-->
    <logger name="com.beiming.common.aspect.RequestLogAspect" level="debug" additivity="false"/>

    <!--此处定义为控制台输出,默认也会输出root,所以会出现两次,通过additivity=false指定不使用root-->
    <logger name="com.beiming.common.aspect.RequestLogAspect1" level="info" additivity="false">
        <appender-ref ref="console"/>
    </logger>

    <!--此处没有定义输出格式,也没有引用root,则配置不会输出-->
    <logger name="com.beiming.common.aspect.RequestLogAspect2" level="info" additivity="false"/>
</configuration>